{
  "name": "pokernook",
  "description": "Next.js web app and GraphQL API",
  "repository": "github:pokernook/pokernook",
  "scripts": {
    "postinstall": "npm run generate:prisma && npm run generate:nexus && npm run generate:graphql",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only --project tsconfig.nexus.json src/graphql/schema",
    "generate:graphql": "graphql-codegen",
    "watch:prisma": "chokidar \"prisma\" --initial --command \"prisma migrate dev && prisma db seed --preview-feature\"",
    "watch:nexus": "ts-node-dev --project tsconfig.nexus.json --exit-child --respawn --transpile-only src/graphql/schema",
    "watch:graphql": "graphql-codegen --watch",
    "ts-node": "ts-node --project tsconfig.nexus.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "dev": "concurrently --kill-others \"next dev\" \"npm:watch:*\"",
    "build": "next build",
    "build:vercel": "prisma migrate deploy && next build",
    "start": "next start"
  },
  "dependencies": {
    "@prisma/client": "2.19.0",
    "@theme-ui/color": "^0.6.0",
    "@urql/devtools": "^2.0.3",
    "@urql/exchange-graphcache": "^4.0.0",
    "altair-fastify-plugin": "^4.0.0",
    "argon2": "^0.27.1",
    "date-fns": "^2.19.0",
    "emoji-mart": "^3.0.1",
    "emoji-regex": "^9.2.1",
    "fastify": "^3.14.0",
    "fastify-cookie": "^5.3.0",
    "fastify-helmet": "^5.3.0",
    "fastify-redis": "^4.3.0",
    "fastify-session": "^5.2.1",
    "framer-motion": "^4.0.0",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.9.0",
    "mercurius": "^7.2.0",
    "next": "^10.1.1",
    "next-urql": "^3.0.0",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.33.0",
    "nexus-shield": "^2.0.0",
    "nexus-validate": "^1.0.0",
    "path-to-regexp": "^6.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-easy-crop": "^3.3.2",
    "react-hook-form": "^7.19.5",
    "react-icons": "^4.2.0",
    "react-is": "^17.0.0",
    "react-router-dom": "^5.2.0",
    "react-toast-notifications": "^2.4.3",
    "seedrandom": "^3.0.5",
    "theme-ui": "^0.6.0",
    "urql": "^2.0.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-urql": "^2.0.5",
    "@types/emoji-mart": "^3.0.4",
    "@types/ioredis": "^4.22.0",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/seedrandom": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.2.1",
    "prisma": "2.19.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
